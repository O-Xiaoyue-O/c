#include <stdio.h>
#include <stdlib.h>

double sum(double a[], int n);
int main () 
{
     double arr[5];
     int i;//原為int i,total; 
     double total=0;//total設為double變數並把初始值設為0 
     for(i=0; i<5; i++) {
          printf("請輸入陣列arr[%d]元素值: ", i);
          scanf("%lf", &arr[i]);//加上&參照
     }
     for(i=0; i<5; i++)
          printf("arr[%d]=%.2f\n", i, arr[i]);
     total=sum(arr,i);
     printf("此陣列的總和為%.2f\n", total);
     return 0;
}

double sum(double a[], int n)//傳入型態設為double
{
     int k;
     double tot=0;//tot設為0
     for(k=0; k<n; k++)//k初始值要0,值為1會少算 
          tot += a[k];
     return tot;
}
